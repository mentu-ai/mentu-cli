      "type": "string - prd|handoff|result|prompt|context|delegation|spec|guide|reference",
      "tier": "string? - T1|T2|T3 (for PRD/HANDOFF)",
      "status": "string - draft|active|superseded|archived",
      "created": "string - ISO date",
      "last_updated": "string? - ISO date",
      "parent": "string? - Parent document ID",
      "children": "string[]? - Child document IDs",
      "dependencies": "string[]? - Required document IDs",
      "mentu": {
        "commitment": "string? - Commitment ID",
        "evidence": "string? - Evidence memory ID",
        "status": "string? - pending|in_progress|closed"
      }
    },
