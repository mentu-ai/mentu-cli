# ===========================================
# UNIVERSAL TICKET LAYER CONFIGURATION
# ===========================================
# Copy this file to .env and fill in your values

# ===========================================
# SUPABASE (Required)
# ===========================================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=eyJ...your-service-role-key
SUPABASE_ANON_KEY=eyJ...your-anon-key

# ===========================================
# API AUTHENTICATION
# ===========================================
# Prefix for all UTL API keys
UTL_API_KEY_PREFIX=utl_

# Default ingestion API key (for external systems)
UTL_INGEST_API_KEY=utl_ingest_generate-a-secure-key-here

# ===========================================
# GITHUB INTEGRATION
# ===========================================
GITHUB_ENABLED=true
GITHUB_TOKEN=ghp_your-personal-access-token
GITHUB_OWNER=your-organization
GITHUB_REPO=your-repository
GITHUB_WEBHOOK_SECRET=generate-a-secure-secret-here

# ===========================================
# LINEAR INTEGRATION (Future)
# ===========================================
LINEAR_ENABLED=false
# LINEAR_API_KEY=lin_your-api-key
# LINEAR_TEAM_ID=your-team-id
# LINEAR_PROJECT_ID=optional-project-id

# ===========================================
# JIRA INTEGRATION (Future)
# ===========================================
JIRA_ENABLED=false
# JIRA_URL=https://your-org.atlassian.net
# JIRA_EMAIL=your-email@example.com
# JIRA_API_TOKEN=your-api-token
# JIRA_PROJECT_KEY=PROJ

# ===========================================
# SLACK NOTIFICATIONS (Future)
# ===========================================
SLACK_ENABLED=false
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/xxx/xxx/xxx
# SLACK_CHANNEL=#tickets
# SLACK_NOTIFY_ON=created,resolved

# ===========================================
# OUTBOUND WEBHOOKS (Future)
# Notify client systems of ticket events
# ===========================================
WEBHOOK_ENABLED=false
# WEBHOOK_URL=https://client.example.com/webhooks/utl
# WEBHOOK_SECRET=your-webhook-secret
# WEBHOOK_EVENTS=ticket.created,ticket.updated,ticket.resolved

# ===========================================
# DEVELOPMENT
# ===========================================
# Set to 'development' for local testing
NODE_ENV=production
